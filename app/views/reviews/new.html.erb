<div class="container">
  <h1 class="text-center">New Review</h1>
  <br><br>
  <div class="row">
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
      <%= link_to "Return", restaurants_path %>
      <% end %>
      </div>
    </div>
</div>
